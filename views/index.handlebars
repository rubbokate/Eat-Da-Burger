<div class="jumbotron">
  <div class="container mb-4">
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6 header text-center">
        <h1 class="display-3">Eat-Da-Burger!</h1>
      </div>
      <div class="col-3"></div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      {{!-- TO BE DEVOURED --}}
      <div class="col-6">
        <ol class="list-group">
          <lh class="lead text-center mb-2">TO BE DEVOURED</lh>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>

      {{!-- DEVOURED --}}
      <div class="col-6">
        <ol class="list-group">
          <lh class="lead text-center mb-2">DEVOURED</lh>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>
  
  {{!-- FORM --}}
  <form class="create-form">
    <div class="form-group mt-4">
      <input class="form-control form-control-lg" type="text" id="burger-input" name="burger_input">
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg">ADD BURGER</button>
    </div>
  </form>
</div>
